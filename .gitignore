# WordPress core caches and logs
wp-content/cache/
wp-content/upgrade/
wp-content/backups/
wp-content/wflogs/
wp-content/debug.log

# Media/uploads (large, environment-specific)
wp-content/uploads/

!wp-content/uploads/shared/
# Themes (installed via WP or WP-CLI). If you add a custom child theme, unignore its folder explicitly.
wp-content/themes/

# Local SQLite DB: αγνόησε όλα στο database εκτός από .ht.sqlite
wp-content/database/*
!wp-content/database/.ht.sqlite

# Αγνόησε γενικά sqlite αρχεία οπουδήποτε
*.sqlite
*.sqlite3
# αλλά κράτα πάντα αυτό το συγκεκριμένο αρχείο
!wp-content/database/.ht.sqlite

# Third-party plugins (install via WP-CLI on each env)
wp-content/plugins/

# Do NOT ignore MU-plugins & db.php (needed for SQLite integration)
!wp-content/mu-plugins/
!wp-content/db.php

# Language packs
wp-content/languages/

# Cache config files
wp-content/wp-cache-config.php
wp-content/advanced-cache.php

# Transients and cache files
*.log
*.tmp
*.swp

# System/IDE files
.DS_Store
Thumbs.db
.idea/
.vscode/

# OS & misc
*.bak
*.old

# Optional: ignore server config generated in dev
.htaccess

# All-in-One WP Migration backups
wp-content/ai1wm-backups/
